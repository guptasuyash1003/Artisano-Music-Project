                                <!-- Form -->
                                <div class="container">
                    
                                    <form method="POST" action="/tracks">
                                        <h3>CREATE A NEW TRACK</h3>

                                        <div class="row uniform">
                                            <div class="6u 12u$(xsmall)">
                                                <input type="text" name="Name" placeholder="Track Name" required>
                                            </div>
                                         
                                            <div class="6u$ 12u$(xsmall)">
                                                <input type="number" name="Playtime" placeholder="Playtime in minutes" required> 
                                            </div>    
                                            <div class="12u$">
                                                <div class="select-wrapper">
                                                <select name="Albumid">
                                                    <label>Album:</label>
                                                    <% albums.forEach(function(album){ %>
                                                        <option value="<%=album.Name%>"><%=album.Name%></option>
                                                    <% }) %>    
                                                </select>
                                                </div>
                                            </div>
                                          
                                          
                                            <div class="3u$ 12u$(small)">
                                                <input type="submit" value="Submit" class="fit" />
                                            </div>
                                        </div>
                                
